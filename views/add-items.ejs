                                    <div>
                                        <h6>Sale Price</h6>
                                        <input class="form-control" name="salePrice" type="number" required>
                                    </div>
                                    <div class="mt-4 justify-content-end d-flex w-100">
                                        <button class="btn btn-danger">Add Product</button>
                                    </div>
                                </form>
